<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zzq="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_map_record"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    tools:context="com.rollup.journey.activity.MapRecordActivity">

    <com.rollup.journey.customview.TitleView
        android:id="@+id/map_record_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        zzq:text_title="@string/str_main_message_record">
    </com.rollup.journey.customview.TitleView>

    <TextView android:id="@+id/map_msg_record"
        android:layout_below="@id/map_record_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_margin_top"
        android:text="name"
        android:gravity="center"
        android:textSize="20sp"/>

    <ListView android:id="@+id/map_msg_listView"
        android:layout_below="@id/map_msg_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f8f8f8"
        android:layout_marginBottom="@dimen/list_margin_bottom">
    </ListView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <include layout="@layout/bottom_item_state"/>
    </LinearLayout>

</RelativeLayout>

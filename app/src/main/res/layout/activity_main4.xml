<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zzq="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    tools:context="com.rollup.journey.activity.Main4Activity">

    <com.rollup.journey.customview.TitleView
        android:id="@+id/main4_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        zzq:text_title="@string/str_main_text1">
    </com.rollup.journey.customview.TitleView>

    <RelativeLayout android:id="@+id/main4_layout1"
        android:layout_below="@id/main4_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/item_bg"
        android:padding="@dimen/item_padding"
        android:layout_marginTop="@dimen/layout_margin_top">

        <ImageView android:id="@+id/main4_img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/main_other1"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_toRightOf="@id/main4_img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/text_padding"
            android:textSize="@dimen/text_size"
            android:text="@string/str_main_other1"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/img_padding_right"
            android:src="@mipmap/guide_next" />

    </RelativeLayout>

    <RelativeLayout android:id="@+id/main4_layout2"
        android:layout_below="@id/main4_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/item_bg"
        android:padding="@dimen/item_padding"
        android:layout_marginTop="1dp">

        <ImageView android:id="@+id/main4_img2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="7dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/main_other2"/>

        <TextView
            android:layout_toRightOf="@id/main4_img2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="22dp"
            android:textSize="@dimen/text_size"
            android:text="@string/str_main_other2"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/img_padding_right"
            android:layout_alignParentRight="true"
            android:src="@mipmap/guide_next"/>

    </RelativeLayout>

    <RelativeLayout android:id="@+id/main4_layout3"
        android:layout_below="@id/main4_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/item_bg"
        android:padding="@dimen/item_padding"
        android:layout_marginTop="1dp">

        <ImageView android:id="@+id/main4_img3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="5dp"
            android:src="@mipmap/main_other3"/>

        <TextView
            android:layout_toRightOf="@id/main4_img3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/text_padding"
            android:textSize="@dimen/text_size"
            android:text="@string/str_main_other3"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/img_padding_right"
            android:src="@mipmap/guide_next"
            android:layout_gravity="center"/>

    </RelativeLayout>

    <RelativeLayout android:id="@+id/main4_layout4"
        android:layout_below="@id/main4_layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/item_bg"
        android:padding="@dimen/item_padding"
        android:layout_marginTop="1dp">

        <ImageView android:id="@+id/main4_img4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="5dp"
            android:src="@mipmap/main_other4" />

        <TextView android:layout_toRightOf="@id/main4_img4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/text_padding"
            android:textSize="@dimen/text_size"
            android:text="@string/str_main_other4"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/img_padding_right"
            android:layout_centerVertical="true"
            android:src="@mipmap/guide_next"
            android:layout_gravity="center"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <include layout="@layout/bottom_item_state"/>
    </LinearLayout>

</RelativeLayout>

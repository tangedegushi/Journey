<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zzq="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main4_history_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_bg"
    tools:context="com.rollup.journey.activity.Main4HistoryDetailActivity">

    <com.rollup.journey.customview.TitleView
        android:id="@+id/main4_history_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        zzq:text_title="@string/str_main_other_history">
    </com.rollup.journey.customview.TitleView>

    <TextView android:id="@+id/main4_history_detail_name"
        android:layout_below="@id/main4_history_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="20sp"
        android:lineSpacingExtra="5dp"
        android:text="团信息"/>

    <ListView android:id="@+id/main4_history_detail_people"
        android:layout_below="@id/main4_history_detail_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/list_margin_bottom"
        android:background="#FFFFFF">
    </ListView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <include layout="@layout/bottom_item_state"/>
    </LinearLayout>

</RelativeLayout>

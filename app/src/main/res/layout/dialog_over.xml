<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView android:id="@+id/over_dialog_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="是否结束行程?"
        android:textSize="26sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <ImageView android:id="@+id/over_dialog_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/main_dialog_confirm"
        android:layout_below="@id/over_dialog_msg"
        android:paddingLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"/>

    <ImageView android:id="@+id/over_dialog_cancel"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/main_dialog_cancel"
        android:layout_below="@id/over_dialog_msg"
        android:paddingRight="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"/>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main1_layout1"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/item_bg"
    android:padding="10dp"
    android:orientation="horizontal"
    tools:context="com.rollup.journey.activity.Main1Activity">

        <TextView android:id="@+id/main4_text_detail_teamName"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:gravity="center"
            android:singleLine="true"
            android:textSize="18sp"
            android:text="name"/>

        <TextView android:id="@+id/main4_text_detail_phone"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="18sp"
            android:text="phone"/>

        <TextView android:id="@+id/main4_text_detail_remark"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:gravity="center"
            android:singleLine="true"
            android:layout_gravity="center"/>

</LinearLayout>
